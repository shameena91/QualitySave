.sidebar-nav {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-link {
  display: flex;
  align-items: center;
  padding: 12px 20px;
  color: #333;
  text-decoration: none;
  transition: all 0.3s ease;
  border-left: 4px solid transparent;
}

.sidebar-link:hover {
  background-color: #f8f9fa;
  color: #007bff;
}

.sidebar-link.active {
  border-left: 4px solid #007bff;
  background-color: #e9f5ff;
  font-weight: 600;
  color: #007bff;
}


    .sidebar {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      width: 240px;
      background-color: #fff;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
     
      transition: width 0.3s ease;
      z-index: 1040;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: #333;
      text-decoration: none;
      transition: background 0.3s;
      white-space: nowrap;
    }

    .sidebar a:hover {
      background-color: #f1f1f1;
    }

    .sidebar.collapsed a span {
      display: none;
    }

    .main-content {
      margin-left: 240px;
      transition: margin-left 0.3s ease;
      padding: 20px;
    }

    .main-content.full {
      margin-left: 60px;
    }

    .navbar {
      margin-left: 240px;
      transition: margin-left 0.3s ease;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .navbar.collapsed {
      margin-left: 60px;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      right: 0;
      top: 100%;
      min-width: 160px;
      border-radius: 4px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      z-index: 1000;
    }

    .dropdown.show .dropdown-content {
      display: block;
    }

    .dropdown-content a {
      padding: 10px 16px;
      display: block;
      color: black;
      text-decoration: none;
    }

    .dropdown-content a:hover {
      background-color: #f1f1f1;
    }
    .sidebar-logo {
  width: 200px;
  height: 50px;
  margin: 0 auto;
  display: block;
  transition: opacity 0.3s ease;
}

.sidebar.collapsed .sidebar-logo {
  opacity: 0;
  visibility: hidden;
}
.sidebar .tog-sidebar-logo {
  display: none;
}

/* Show large logo when sidebar is not collapsed */
.sidebar .sidebar-logo {
  display: block;
}

/* When collapsed: show small logo, hide large logo */
.sidebar.collapsed .tog-sidebar-logo {
  display: block;
}

.sidebar.collapsed .sidebar-logo {
  display: none;
}
 .error-message { color: red; }

    .thumbnail { margin-right: 10px; }

    .image-cropper {
      position: relative;
