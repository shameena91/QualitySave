


<style>
  header {
  position: sticky;
  top: 0;
  z-index: 1040;
}
body, html {
  margin: 0;
  padding: 0;
}
  .head {
    background-color: #fff;
  }
  .img-container {
    width: 200px;
    height: 50px;
    overflow: hidden;
  }
  .img-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
   .nav-link {
    color: #333;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #0d6efd;
  }

  .dropdown-menu a {
    font-weight: 500;
  }
  
</style>

<header class="bg-white shadow-sm">
  <nav class="navbar navbar-expand-md bg-white py-2 ">
    <div class="container-fluid">

      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <img src="/images/qslogo-1.png" alt="Logo" style="height: 50px; width: auto;">
      </a>

      <!-- Toggler -->
      <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Offcanvas -->
      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav ms-auto gap-3">

            <li class="nav-item">
              <a class="nav-link fw-semibold" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fw-semibold" href="/shop">Shopping</a>
            </li>

            {{#if user}}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle fw-semibold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" style="text-transform:capitalize">
                {{user.name}}
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/user-profile">Profile</a></li>
                <li><a class="dropdown-item" href="/my-orders">My Orders</a></li>
                <li><a class="dropdown-item" href="/wishlist">Wishlist</a></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/login"><i class="fa-regular fa-user me-1"></i>Login</a>
            </li>
            {{/if}}

            <li class="nav-item">
              <a class="nav-link" href="/wishlist"><i class="fa-regular fa-heart me-1"></i>Wishlist</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart"><i class="fa-solid fa-cart-shopping me-1"></i>Cart</a>
            </li>

          </ul>
        </div>
      </div>

    </div>
  </nav>
</header>

