{{> admin-header }}
 <div class="main-content " id="mainContent">
    <h2>Brands</h2>

<div class="container-fluid my-5" >
  <div class="row">
  
    <!-- Left Side: Add Brand Form -->
    <div class="col-md-4">
      <div class="card shadow rounded" >
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Add Brand</h4>
        </div>
        <div class="card-body">
