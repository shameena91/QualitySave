<!-- Modal -->
<div class="modal fade" id="editBrandModal" tabindex="-1" aria-labelledby="editBrandModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editBrandModalLabel">Edit Brand</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
     <form id="editBrandForm" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Brand Name</label>
    <input type="text" id="name" name="name" class="form-control" required>
  </div>

  <div class="form-group">
    <label for="image">Brand Image</label>
    <input type="file" id="image" name="image" class="form-control">
    <img id="brandImagePreview" src="" alt="Brand Image" width="100" class="mt-2">
  </div>

  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
      </div>
    </div>
  </div>
</div>


  <div class="d-flex justify-content-end mt-4">
<nav aria-label="page-navigation">
  <ul class="pagination">
    <li class="page-item {{#if (eq currentPage  1)}}disabled{{/if}}">
      <a class="page-link" href="?page={{sub currentPage 1}}">Previous</a>
    </li>

    
      {{#each (range 1 totalPages)}}
      <li class="page-item {{#if (eq ../currentPage this)}}active{{/if}}">
        <a class="page-link" href="?page={{this}}">{{this}}</a>
      </li>
    {{/each}}


    <li class="page-item {{#if (eq currentPage  totalPages)}}disabled{{/if}}">
      <a class="page-link" href="?page={{add currentPage 1}}">next</a></li>
    
  </ul>
</nav>
</div>
<script>


function blockBrand(id) {
  $.ajax({
    url: `/admin/brand/${id}/block`,
    method: "POST",
    success: function (data) {
      Swal.fire({
        title: "Brand Blocked",
        text: data.message || "The brand has been successfully blocked.",
        icon: "success",
        confirmButtonColor: "#3085d6",
        confirmButtonText: "OK"
      }).then(() => {
        location.reload();
      });
    },
    error: function (err) {
      Swal.fire({
        title: "Error!",
        text: err.responseJSON?.message || "Something went wrong while blocking the brand.",
        icon: "error",
        confirmButtonColor: "#d33",
        confirmButtonText: "OK"
      });
    },
  });
}


function unblockBrand(id)
{
    $.ajax({
    url: `/admin/brand/${id}/unblock`,
    method: "PATCH",
    success: function (data) {

Swal.fire({
  title:"Unblocked",
  text:data.message,
   icon: 'success',
  confirmButtonText: 'OK'
}).then ((result)=>{
   location.reload(); 
})
    
    },
    error: function (err) {
      Swal.fire({
              title: 'Error!',
              text: 'An error occurred while deleting the brand.',
              icon: 'error',
              confirmButtonText: 'OK'
            });
    },
  });
}


 function deleteBrand(id) {

    Swal.fire({
      title: 'Are you sure?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Yes',
      cancelButtonText: 'No'
    }).then((result) => {
      if (result.isConfirmed) {
    
        $.ajax({
          url: `/admin/brand/${id}`,
          method: "DELETE",
          success: function(data) {          
            Swal.fire({
              title: 'Deleted!',
              text: data.message,
              icon: 'success',
              confirmButtonText: 'OK'
            }).then(() => {
              location.reload(); 
            });
          },
          error: function(err) {
         
            Swal.fire({
              title: 'Error!',
              text: 'An error occurred while deleting the brand.',
              icon: 'error',
              confirmButtonText: 'OK'
            });
          }
        });
      }
    });
  }

  // Handle form submission via AJAX using Fetch
document.getElementById('editBrandForm').addEventListener('submit', function(e) {
  e.preventDefault(); // Prevent normal form submission

  const formData = new FormData(this);

  // Log form data for debugging
  for (let [key, value] of formData.entries()) {
    console.log(key, value); // Check if image is added correctly
  }

  fetch(this.action, {
    method: 'PATCH', // Use PATCH for updates
    body: formData
  })
  .then(response => response.json()) // Expecting JSON response
  .then(data => {
    if (data.success) {
      // If successful, show success message
      Swal.fire({
        title: 'Success!',
        text: 'Brand has been updated.',
        icon: 'success',
        confirmButtonText: 'OK'
      }).then(() => {
        window.location.href = '/admin/brand'; // Redirect to brand page
      });
    } else {
      // If there was an error, show error message
      Swal.fire({
        title: 'Error!',
        text: data.message || 'There was a problem updating the brand.',
        icon: 'error',
        confirmButtonText: 'Try Again'
      });
    }
  })
  .catch(error => {
    // Handle network or other errors
    Swal.fire({
      title: 'Error!',
      text: 'Something went wrong, please try again later.',
      icon: 'error',
      confirmButtonText: 'OK'
    });
  });
});

// Set up modal fields dynamically when opening the modal
document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
  button.addEventListener('click', function() {
    const brandId = this.getAttribute('data-id');
    const brandName = this.getAttribute('data-name');
    const brandImage = this.getAttribute('data-image');

    document.getElementById('name').value = brandName;
    if (brandImage) {
      document.getElementById('brandImagePreview').src = "/uploads/re-image/" + brandImage;
    } else {
      document.getElementById('brandImagePreview').src = "";
    }

    // Dynamically set the action URL of the form to use PATCH
    document.getElementById('editBrandForm').action = `/admin/brand/${brandId}`;
  });
});
</script>
