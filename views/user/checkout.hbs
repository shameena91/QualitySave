    codInput.disabled = true;
    codLabel.innerHTML += ` <span class="text-danger">(Not available for orders above ₹1000)</span>`;
  }else{
    codInput.disabled = false;
  }
};


const originalAmount=document.getElementById("finalAmount").textContent


