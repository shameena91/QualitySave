<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #fafbfc;
    color: #333;
  }

  ul {
    list-style: none;
    padding-left: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  .main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .shop-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .search-form {
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 25px;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    max-width: 300px;
    padding: 2px 5px;
  }

  .search-input {
    flex: 1;
    padding: 10px 15px;
    font-size: 15px;
    border: none;
    outline: none;
  }

  .search-button {
    padding: 10px 18px;
    background-color: #1e918b;
    color: #fff;
    border: none;
    cursor: pointer;
    font-size: 14px;
    border-radius: 20px;
    margin-right: 5px;
    transition: 0.3s;
  }

  .search-button:hover {
    background-color: #156f6b;
  }

  .product-list-container {
    display: flex;
    gap: 25px;
  }

  .sidebar {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    width: 250px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
         height: fit-content;
  }

  .filter-section {
    margin-bottom: 30px;
   
  }

  .filter-title {
    font-weight: 600;
    margin-bottom: 15px;
    font-size: 20px;
  
      text-align: center;
  }

  .filter-item {
    padding: 5px 0;
    text-transform: capitalize;
    text-align: center;
  }

  .filter-item a {
    color: #555;
    transition: 0.3s;
    text-align: center;
  }

  .filter-item a:hover {
    color: #1e918b;
  }

  .price-filter .price-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
     text-align: center;
  }

  .price-button {
    padding: 10px;
    background-color: #f1f1f1;
    color: #333;
    border: 1px solid #ccc;
    border-radius: 25px;
    cursor: pointer;
    transition: 0.3s;
  }

  .price-button:hover {
    background-color: #1e918b;
    color: white;
    transform: scale(1.05);
  }

  .product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    width: 100%;
  }

  .product-card {
    width: calc(33.33% - 20px);
    background-color: white;
    border-radius: 12px;
    padding: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    transition: 0.3s ease;
    position: relative;
    text-align: center;
    height: fit-content;
  
   
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card img {
    max-width: 100%;
    height: 250px;
    object-fit: contain;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .product-card h4 {
    font-size: 18px;
    color: #333;
    margin: 10px 0 5px;
    
  }



  .product-card p {
    margin: 4px 0;
    font-size: 14px;
  }

  .wishlist-btn {
    position: absolute;
 top:5px;
  right: 15px;
  z-index: 2;
  font-size: 1.2rem;
  background-color: #ffffffcc;
  padding: 5px 8px 3px 8px;
  
  
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

  .add-to-cart-btn {
    background-color: #1e918b;
    color: #fff;
    padding: 10px 12px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    width: 100%;
    margin-top: 10px;
    transition: background-color 0.3s;
  }

  .add-to-cart-btn:hover {
    background-color: #156f6b;
  }

  /* Pagination */
  
</style>

<!-- HTML content (unchanged except class enhancements) -->
<div class="main-container">
  <section class="shop-page container">
    <div class="shop-topbar">
      <form action="/search" method="POST" class="search-form">
        <input type="text" name="query" placeholder="Search items..." class="search-input" />
        <button type="submit" class="search-button">Search</button>
      </form>
    </div>
    <div style="padding-left:240px; display: flex; justify-content: space-between; align-items: center;">
  <div>
    {{#if query}}
      <h3>Search result for '{{query}}' - <span style="font-size:20px">({{count}}) found</span></h3>
    {{/if}}

    {{#if searchCat}}
      <h3>{{searchCat}} - <span style="font-size:20px; text-transform:capitalize">({{count}}) found</span></h3>
    {{/if}}

    {{#if searchBrand}}
      <h3>{{searchBrand}} - <span style="font-size:20px; text-transform:capitalize">({{count}}) found</span></h3>
    {{/if}}
  </div>

  <div class="ms-auto mb-3" style="margin-left: auto;">
  <div class="dropdown">
  <a class="dropdown-toggle p-2" style="background-color:white; box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.05);" href="#" role="button" 
  data-bs-toggle="dropdown" aria-expanded="false" 
  style="text-decoration: none; " >
  <span style="color:rgb(128, 126, 126)"> Sort by</span> 
  </a>
  <ul class="dropdown-menu">
       <li><a class="dropdown-item" href="/shop">Recomended</a></li>
    <li><a class="dropdown-item" href="/sort?sort=asc">Price low to high</a></li>
    <li><a class="dropdown-item" href="/sort?sort=desc">price high to low</a></li>
    <li><a class="dropdown-item" href="/sort?sort=az">A-Z</a></li>
        <li><a class="dropdown-item" href="/sort?sort=za">Z-A</a></li>
  </ul>
</div>
</div>
</div>
 
 
    <div class="product-list-container">
     
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="filter-section">
          <div class="filter-title">Categories</div>
          <ul>
            <li class="filter-item"><a href="/shop?clearFilters=true" >All</a></li>
            {{#each category}}
              <li class="filter-item"><a href="/filter?category={{_id}}">{{name}}</a></li>
            {{/each}}
          </ul>
        </div>

        <div class="filter-section">
          <div class="filter-title">Brands</div>
          <ul>
            {{#each brand}}
              <li class="filter-item"><a href="/filter?brand={{_id}}">{{brandName}}</a></li>
            {{/each}}
          </ul>
        </div>

        <div class="price-filter">
          <div class="filter-title">Filter by Price</div>
          <div class="price-options">
            <a href="/filter?gt=0&&lt=100"><button type="button" class="price-button">Under ₹100</button></a>
            <a href="/filter?gt=100&&lt=500"><button type="button" class="price-button">₹100 - ₹500</button></a>
            <a href="/filter?gt=500&&lt=1000"><button type="button" class="price-button">₹500 - ₹1000</button></a>
            <a href="/filter?gt=1000&&lt=2000"><button type="button" class="price-button">₹1000 - ₹2000</button></a>
            <a href="/filter?gt=2000&&lt=10000"><button type="button" class="price-button">Above ₹2000</button></a>

          </div>
        </div>
      </aside>

      <!-- Product Grid -->
      <main class="product-grid">
        
        {{#each products}}
          <div class="product-card ">
        {{#if @root.user}}
            <span class="wishlist-btn text-danger" onclick="addToWishlist(this,'{{_id}}')"><i class="bi bi-heart-fill"></i></span>
          {{else}} 
            <span class="wishlist-btn text-danger" onclick="notLogin()"><i class="bi bi-heart-fill"></i></span>

          {{/if}} 
            <a href="/productDetails/{{_id}}"><img src="/uploads/re-image/{{productImage.[0]}}" alt="{{productName}}" /></a>
            <h4 class="text-truncate d-block" style="max-width: 100%;">{{productName}}</h4>
            <p>Brand: {{brand.brandName}}</p>
         

{{#if (gt category.categoryoffer productOffer )}}
{{#if category.categoryoffer}}
            <p style="font-size:18px;font-weight:600">₹{{discountedPrice}}<span class="text-muted">&nbsp;<strike>₹{{salePrice}}</strike></span>
            <span style="color:rgb(4, 170, 4);font-size:15px;font-weight:600">&nbsp;&nbsp;{{category.categoryoffer}}% off </span>
 {{else}}
                        <p style="font-size:18px;font-weight:600">₹{{salePrice}}

           
           {{!-- <p>Category: {{category.categoryoffer}}</p> --}}
           {{/if}}
           {{else}}
           {{#if productOffer}}

            <p style="font-size:18px;font-weight:600">₹{{discountedPrice}}<span class="text-muted">&nbsp;<strike>₹{{salePrice}}</strike></span>
            
            
            <span style="color:rgb(4, 170, 4);font-size:15px;font-weight:600">&nbsp;&nbsp;{{productOffer}}% off </span>
           {{else}}
                        <p style="font-size:18px;font-weight:600">₹{{salePrice}}

           
           {{!-- <p>pro: {{productOffer}}</p> --}}
           {{/if}}

{{/if}}

           
             {{#if quantity}}
 <div class="card-footer bg-white border-0">
  
    {{#if @root.user}}
      <button onclick="addToCart('{{_id}}')"
         class="btn btn-success w-100 rounded-pill d-flex align-items-center justify-content-center gap-2">
       Add to Cart 
      {{else}}
      <button onclick="notLogin()"
         class="btn btn-success w-100 rounded-pill d-flex align-items-center justify-content-center gap-2">
       Add to Cart
      </button>
      {{/if}}
    </div>            {{else}}
             <h5 style="color:red">Currently unavailable</h5>
             {{/if}}
          </div>
        {{/each}}
      </main>
    </div>

    <!-- Pagination -->
  <div class="d-flex justify-content-end mt-4">

<nav aria-label="page-navigation">
  <ul class="pagination">
    <li class="page-item {{#if (eq currentPage 1)}}disabled{{/if}}">
      <a class="page-link" href="?page={{sub currentPage 1}}&sort={{sort}}">Previous</a>
    </li>

    {{#each (range 1 totalPages)}}
      <li class="page-item {{#if (eq ../currentPage this)}}active{{/if}}">
        <a class="page-link" href="?page={{this}}&sort={{../sort}}">{{this}}</a>
      </li>
    {{/each}}

    <li class="page-item {{#if (eq currentPage totalPages)}}disabled{{/if}}">
      <a class="page-link" href="?page={{add currentPage 1}}&sort={{sort}}">Next</a>
    </li>
  </ul>
</nav>
</div>
  </section>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script>



  function notLogin()
{
  

     
          Swal.fire({
            icon: 'warning',
            title: 'Please log in',
            text: 'You must be logged in to add products to your cart.',
            showCancelButton: true,
            confirmButtonText: 'Login Now',
            cancelButtonText: 'Cancel'
          }).then(result => {
            if (result.isConfirmed) {
              window.location.href = "/login";
            }
          });
}  
   

  function addToWishlist(element,proId)
  {
    $.ajax({
      url:'/addToWishlist',
      method:"POST",
      data:{proId:proId},
      success:(response)=>{
          $(element).find('i').removeClass('text-danger').addClass('text-secondary');
        if(response.status){
          Swal.fire({
            title:"added to wishlist",
            text:"the product hasbeenn added to wish list",
            icon:'success',
            timer:2000
          })
        }else{
           Swal.fire({
          
            text:response.message,
            icon:'info',
            timer:2000
          })
        }

      },
      error:(error)=>{
        Swal.fire({
          title:'Error',
          text:"There was an error",
          icon:'error',
          timer:2000
        })
      }

    })
  }

 function addToCart(proId) {
  $.ajax({
    url: '/addToCart',
    method: "POST",
    data: { proId: proId },
    success: (response) => {
        console.log("Server response:", response); 
      if (response.status) {
        Swal.fire({
          title: "Added to Cart",
          text: response.message,
          icon: 'success',
          confirmButtonText:'Go To Cart',
          timer: 2000
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/cart';
          }
        });
      }else{
           Swal.fire({
           
            text:response.message,
            icon:'info',
            timer:2000
          })
        }
    },
    error: (error) => {
      Swal.fire({
        title: 'Error',
        text: "There was an error",
        icon: 'error',
        timer: 2000
      });
    }
  });
}


</script>

