    <script>

function notLogin()
{
  

     
          Swal.fire({
            icon: 'warning',
            title: 'Please log in',
            text: 'You must be logged in to add products to your cart.',
            showCancelButton: true,
            confirmButtonText: 'Login Now',
            cancelButtonText: 'Cancel'
          }).then(result => {
            if (result.isConfirmed) {
              window.location.href = "/login";
            }
          });
}  
   







      
     function addToCart(proId) {
  $.ajax({
    url: '/addToCart',
    method: "POST",
    data: { proId: proId },
    success: (response) => {
      if (response.status) {
        Swal.fire({
          title: "Added to Cart",
          text: response.message,
          icon: 'success',
          confirmButtonText:'Go TO Cart',
          timer: 2000
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/cart';
          }
        });;
      }else{
           Swal.fire({
            title:" Exceed",
            text:response.message,
            icon:'info',
            timer:2000
          })
        }
    },
    error: (error) => {
      Swal.fire({
        title: 'Error',
        text: "There was an error",
        icon: 'error',
        timer: 2000
      });
    }
  });
}
  function addToWishlist(element,proId)
  {
    $.ajax({
      url:'/addToWishlist',
      method:"POST",
      data:{proId:proId},
      success:(response)=>{
          $(element).find('i').removeClass('text-danger').addClass('text-secondary');
        if(response.status){
          Swal.fire({
            title:"added to wishlist",
            text:"the product hasbeenn added to wish list",
            icon:'success',
            timer:2000
          })
        }else{
           Swal.fire({
            title:" already in wishlist",
            text:response.message,
            icon:'info',
            timer:2000
          })
        }

      },
      error:(error)=>{
        Swal.fire({
          title:'Error',
          text:"There was an error",
          icon:'error',
          timer:2000
        })
      }

    })
  }
    </script>
