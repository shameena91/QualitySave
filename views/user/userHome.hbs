        <div class="row">
          <div class="col-md-12">

            <div class="section-header d-flex flex-wrap justify-content-between my-4">
              
              <h2 class="section-title">Latest Products</h2>

              <div class="d-flex align-items-center">
                <a href="/shop" class="btn btn-primary rounded-1">View All</a>
              </div>
            </div>
            
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5">


  {{#each products}}    
<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
  <div class="card h-100 shadow border-0 rounded-4 p-3 overflow-hidden position-relative">

    <!-- Wishlist Icon -->
    <span class="wishlist-btn text-danger d-flex align-items-center justify-content-center"
          onclick="addToWishlist(this,'{{_id}}')">
      <i class="bi bi-heart-fill"></i>
    </span>

    <!-- Product Image -->
    <a href="/productDetails?id={{_id}}">
      <img src="/uploads/re-image/{{productImage.[0]}}"
           class="card-img-top img-fluid"
           alt="{{productName}}"
           style="height: 220px; object-fit: cover; transition: transform 0.3s ease;">
    </a>

    <!-- Card Body -->
    <div class="card-body text-center">
      <h6 class="card-title fw-semibold text-truncate" title="{{productName}}">
        {{productName}}
      </h6>
      <p>Brand:{{brand.brandName}}</p>

      {{#if (gt category.categoryoffer productOffer )}}
{{#if category.categoryoffer}}
            <p style="font-size:18px;font-weight:600">₹{{discountedPrice}}<span class="text-muted">&nbsp;<strike>₹{{salePrice}}</strike></span>
            <span style="color:rgb(4, 170, 4);font-size:15px;font-weight:600">&nbsp;&nbsp;{{category.categoryoffer}}% off </span>
 {{else}}
                        <p style="font-size:18px;font-weight:600">₹{{salePrice}}

           
           {{!-- <p>Category: {{category.categoryoffer}}</p> --}}
           {{/if}}
           {{else}}
           {{#if productOffer}}

            <p style="font-size:18px;font-weight:600">₹{{discountedPrice}}<span class="text-muted">&nbsp;<strike>₹{{salePrice}}</strike></span>
            
            
            <span style="color:rgb(4, 170, 4);font-size:15px;font-weight:600">&nbsp;&nbsp;{{productOffer}}% off </span>
           {{else}}
                        <p style="font-size:18px;font-weight:600">₹{{salePrice}}

           
    
           {{/if}}

{{/if}}
   
    </div>

    <!-- Add to Cart Button -->
    <div class="card-footer bg-white border-0">
      <a href="/addtoCart?id={{_id}}"
         class="btn btn-success w-100 rounded-pill d-flex align-items-center justify-content-center gap-2">
        Add to Cart
      </a>
    </div>
  </div>
