<style>
  .tracker {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 50px;
    position: relative;
  }

  .step {
    text-align: center;
    flex: 1;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .circle {
    width: 36px;
    height: 36px;
    line-height: 36px;
    border-radius: 50%;
    background-color: #dee2e6;
    color: #fff;
    font-weight: 600;
    margin-bottom: 8px;
    z-index: 1;
  }
  .status-pill {
     padding: 2px 10px; 
     border-radius: 20px; 
     font-size: 0.8rem; }

  .step.completed .circle {
    background-color: #28a745;
  }

  .step.active .circle {
    background-color: #0d6efd;
  }

  .step span {
    font-size: 14px;
    color: #333;
  }

  .connector {
    position: absolute;
    top: 18px;
    right: -50%;
    width: 100%;
    height: 2px;
    background-color: #8d8d8c; /* default orange */
    z-index: 0;
  }

  .step.completed .connector.completed {
    background-color: #28a745; /* green when step is completed */
  }

  .step:last-child .connector {
    display: none;
  }
</style>
<div class="container my-5">
 
 
<div class="tracker">
   {{#if (eq status "Cancelled")}}
     <div class="step completed">
    <div class="circle">1</div>
    <span>Processing</span>
    <div class="connector completed"></div>
   
  </div>
  <div class="step completed">
    <div class="circle bg-danger">2</div>
    <span>Cancelled</span>
    <div class="connector completed"></div>
  </div>
    {{else}}
  <div class="step completed">
    <div class="circle">1</div>
    <span>Processing</span>
    <div class="connector"></div>
   
  </div>
  <div class="step ">
    <div class="circle">2</div>
    <span>Confirmed</span>
    <div class="connector"></div>
  </div>
  <div class="step">
    <div class="circle">3</div>
    <span>Shipped</span>
    <div class="connector"></div>
    <!-- No connector here -->
  </div>
  <div class="step">
    <div class="circle">4</div>
    <span>Delivered</span>
  </div>
  {{/if}}
</div>

  <!-- Two Column Order Details Layout -->
  <div class="row">
    <!-- Left Column: Product Info -->
    <div class="col-md-8">
      <div class="card p-3 mb-4">
        <h5 class="mb-3">Items in this Order</h5>

        <div class="d-flex align-items-center  py-3">
          <img src="/uploads/re-image/{{product.productImage.[0]}}" class="me-3" style="height: 100px;" />
          <div>
            <h6 class="mb-1">{{product.productName}}</h6>
            <p class="mb-1">Qty: {{quantity}}</p>
            <p class="mb-2">Price: {{price}}</p>

            <div>
        
    {{ if (eq this.status "Cancelled")}}
      <span class="status-pill bg-danger text-white p-1 ps-2 pe-2">{{this.status}}</span>
    {{else if (eq this.status "Delivered")}}
      <span class="status-pill bg-success text-white p-1  ps-2 pe-2">{{this.status}}</span>
       {{else}}
      <span class="status-pill bg-warning p-1 ps-2 pe-2 border-rounded">{{this.status}}</span>
    {{/if}}
        </div>
          </div>
        </div>
           <div class="text-end">
            {{#if (eq status "Cancelled")}}
            <button class="btn btn-sm btn-danger disabled" data-bs-toggle="modal" data-bs-target="#cancelModal">
  Cancel Order
</button> 
{{else}}

<button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
  Cancel Order
</button> 
{{/if}}         </div>
      </div>
           
    </div>

    <!-- Right Column: Address + Summary + Payment -->
    <div class="col-md-4">
      <!-- Shipping Address -->
      <div class="card mb-4">
        <div class=" p-2 ps-3" style="border-bottom:1px solid rgb(192, 191, 191);color:rgb(194, 193, 193)">
        <h6 >Shipping Address</h6>
        </div>
        <div class="p-3">
        <h4 class="mb-3 fw-semibold">{{specifiedAddress.fullName}}</h4>
        <p class="mb-1">{{specifiedAddress.houseDetails}}</p>
        <p class="mb-1">{{specifiedAddress.city}}</p>
        <p class="mb-1">{{specifiedAddress.state}} - {{specifiedAddress.pincode}}</p>
        <h6>Phone number: {{specifiedAddress.phone}}</h6>
      </div>
</div>
      <!-- Order Summary -->
      <div class="card p-3 mb-4">
        <h6>Order Summary</h6>
        <div class="d-flex justify-content-between">
          <span>Total Price:</span>
          <span>₹{{totalPrice}}</span>
        </div>
        <div class="d-flex justify-content-between">
          <span>Discount:</span>
          <span>-₹{{discount}}</span>
        </div>
        <hr>
        <div class="d-flex justify-content-between fw-bold">
          <span>Final Amount:</span>
          <span>₹{{finalAmount}}</span>
        </div>
      </div>

      <!-- Payment Method -->
      <div class="card p-3">
        <h6>Payment Method</h6>
        <p>Cash on Delivery</p>
        <div class="text-end">
          <a href="#" class="btn btn-sm btn-outline-success">Download Invoice</a>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Cancel Reason Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form method="POST" action="/cancel-order" id="cancelForm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="cancelModalLabel">Cancel Order</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        
        <div class="modal-body">
          <div class="mb-3">
            <label for="cancelReason" class="form-label">Select a reason for cancellation</label>
            <select class="form-select" name="reason" id="cancelReason" required>
              <option value="" selected disabled>Choose a reason</option>
              <option value="Ordered by mistake">Ordered by mistake</option>
              <option value="Better price elsewhere">Better price elsewhere</option>
              <option value="Need changed">Need changed</option>
              <option value="Expected delivery too long">Expected delivery too long</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <input type="hidden" name="orderId" value="{{orderId}}">
          <input type="hidden" name="productId" value="{{product._id}}">
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Confirm Cancel</button>
        </div>
      </div>
    </form>
  </div>
</div>
