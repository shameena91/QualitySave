<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Invoice - {{order.orderId}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body { font-size: 14px; } .invoice-box { padding: 20px; } .section-title {
      font-weight: 600; margin-bottom: 10px; } .border-box { border: 1px solid
      #dee2e6; padding: 15px; border-radius: 8px; } .table th, .table td {
      vertical-align: middle; } .total { font-weight: bold; font-size: 16px; }
    </style>
  </head>
  <body>
    <div class="container invoice-box">
      <h2 class="text-center mb-4">INVOICE</h2>

      <div class="row mb-4">
        <div class="col-md-6 border-box">
          <div class="section-title">From</div>
          <p><strong>Quality Save</strong></p>
          <p>123 Business Street<br />Kollam, Kerala 691536<br />Phone:
            9876543210<br />Email: support@yourstore.com</p>
        </div>
        <div class="col-md-6 border-box">
          <div class="section-title">To</div>
          <p><strong>{{userFullName}}</strong></p>
          <p>{{userAddress}}<br />{{userCity}},
            {{userState}}
            -
            {{userPincode}}<br />Phone:
            {{userPhone}}</p>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4"><strong>Order ID:</strong> {{order.orderId}}</div>
        <div class="col-md-4"><strong>Order Date:</strong> {{orderDate}}</div>
        <div class="col-md-4 text-end"><strong>Invoice Date:</strong>
          {{formatDate order.invoiceDate}}</div>
      </div>

      <div class="mb-3">
        <strong>Payment Method:</strong>
        {{#if (eq order.paymentMethod "razorpay")}}
          Online
        {{else}}
          {{order.paymentMethod}}
        {{/if}}
      </div>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>

            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price (₹)</th>
            <th>Total (₹)</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>

              <td>{{this.productName}}</td>
              <td>{{this.quantity}}</td>
              <td>{{this.price}}</td>
              <td>{{this.total}}</td>
            </tr>
          {{/each}}

        </tbody>
      </table>
      <div class="row justify-content-end">
        <div class="col-md-6">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th class="text-end">Subtotal:</th>
                <td class="text-end">₹{{order.totalPrice}}</td>
              </tr>
              <tr>
                <th class="text-end">Discount:</th>
                <td class="text-end">-₹{{discount}}</td>
              </tr>
              <tr>
                <th class="text-end">Shipping:</th>
                <td class="text-end">+₹{{order.shipping}}</td>
              </tr>
              <tr class="border-top">
                <th class="text-end fs-5">Grand Total:</th>
                <td class="text-end fs-5 fw-bold">₹{{add
                    order.finalAmount
                    order.shipping
                  }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </body>
</html>